<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    >

    <ScrollView
        android:id="@+id/outer_scroll_id"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:fillViewport="true"
        android:padding="20dp"
        android:clipToPadding="false"
        android:scrollbarStyle="outsideOverlay"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            >

            <!-- Stretchy Spacer -->
            <View
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter wallet seed"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    />

                <EditText
                    android:id="@+id/seed"
                    android:inputType="text"
                    android:singleLine="true"
                    android:minWidth="200dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Hexadecimal seed"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    />

            </LinearLayout>

            <!-- Stretchy Spacer -->
            <View
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="left"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Or enter wallet mnemonic "
                    android:textAppearance="@android:style/TextAppearance.Small"
                    />

                <EditText
                    android:id="@+id/mnemonic"
                    android:inputType="textMultiLine"
                    android:capitalize="none"
                    android:minWidth="200dp"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:gravity="left|top"
                    android:hint="space separeted ordered word goes here"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    >
                    <requestFocus />
                </EditText>

            </LinearLayout>

            <!-- Stretchy Spacer -->
            <View
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="left"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of accounts to restore"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    />

                <EditText
                    android:id="@+id/numaccounts"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:minWidth="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    />

            </LinearLayout>

            <!-- Stretchy Spacer -->
            <View
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="left"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Optional passphrase"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    />

                <EditText
                    android:id="@+id/passphrase"
                    android:inputType="text"
                    android:singleLine="true"
                    android:minWidth="200dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    />

            </LinearLayout>

            <!-- Stretchy Spacer -->
            <View
                android:id="@+id/reduce_space"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                />

            <CheckBox
                android:id="@+id/reduce_false_positives"
                android:text="restore_reduce_false_positives"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textAppearance="@android:style/TextAppearance.Small"
                />

            <!-- Stretchy Spacer -->
            <View
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                />

            <!-- Stretchy Spacer -->
            <View
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                />

            <Button
                android:id="@+id/restore"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="button_restore"
                android:onClick="restoreWallet"
                />

            <!-- Stretchy Spacer -->
            <View
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
